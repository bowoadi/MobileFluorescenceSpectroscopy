<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.login.LoginController"
    tools:showIn="@layout/login_activity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_form"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Username"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_form"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email_form"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Password"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3" />

    <Button
        android:text="REGISTER"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/register_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="LOGIN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_email"
        android:id="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/email_form"
        app:layout_constraintTop_toTopOf="@+id/email_form"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lock"
        android:id="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/password_form"
        app:layout_constraintTop_toTopOf="@+id/password_form"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2" />
</android.support.constraint.ConstraintLayout>
