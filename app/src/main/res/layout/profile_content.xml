<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.profile.ProfileController"
    tools:showIn="@layout/profile_activity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_picture_form"
        android:layout_width="150dp"
        android:layout_height="154dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:visibility="invisible"
        android:id="@+id/edit_save_profile_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/name_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/profile_picture_form"
        app:layout_constraintRight_toRightOf="@+id/profile_picture_form"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture_form" />

    <EditText
        android:id="@+id/email_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/name_form"
        app:layout_constraintRight_toRightOf="@+id/name_form"
        app:layout_constraintTop_toBottomOf="@+id/name_form" />

    <EditText
        android:id="@+id/clouded_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Clouded Data"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/email_form"
        app:layout_constraintRight_toRightOf="@+id/email_form"
        app:layout_constraintTop_toBottomOf="@+id/email_form" />


</android.support.constraint.ConstraintLayout>
